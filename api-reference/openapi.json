          "operationId": "restart-device",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "description": "Device ID",
              "required": true,
              "schema": {
                "type": "integer",
                "description": "Numeric device identifier"
              }
            }
          ],
          "requestBody": {
            "required": false,
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "phoneNumber": {
                      "type": "string",
